{
    "name": "cleatsquad/magento2-smarty",
    "description": "Smarty template engine for Magento 2",
    "type": "magento2-module",
    "version": "1.0.0",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "magento/framework": ">=100.0.0",
        "magento/module-backend": ">=100.0.0",
        "magento/module-config": ">=100.0.0",
        "smarty/smarty": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.3",
        "phpmd/phpmd": "^2.6",
        "sebastian/phpcpd": "^3.0",
        "php-coveralls/php-coveralls": "^2.1"
    },
    "type": "magento2-module",
    "version": "1.1.0",
    "authors": [
        {
            "name": "Mohamed El Mrabet",
            "homepage": "https://www.cleatsquad.com",
            "role": "Developer"
        }
